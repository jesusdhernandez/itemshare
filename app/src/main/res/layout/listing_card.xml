<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:layout_width="match_parent"
    android:layout_height="105dp">

    <TextView
        android:id="@+id/listingName"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="20dp"
        android:maxLines="1"
        android:text="Listing: "
        android:textColor="@color/black"
        android:textSize="16sp" />

    <ImageView
        android:id="@+id/listingPic"
        android:layout_width="78dp"
        android:layout_height="49dp"
        android:layout_below="@id/listingName"
        android:layout_marginStart="320dp"
        android:layout_marginTop="2dp"
        android:src="@drawable/listingimage"
        />

    <TextView
        android:id="@+id/listingSummary"
        android:layout_width="296dp"
        android:layout_height="65dp"
        android:layout_below="@id/listingName"
        android:layout_alignLeft="@id/listingName"
        android:text="Blah Blah"
        android:textSize="16sp" />

    <Button
        android:id="@+id/messageButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Message Requester"
        android:layout_marginTop="70dp"
        android:layout_marginLeft= "20dp"
        android:layout_gravity="end" /> <!-- THIS LINE MOVES THE BUTTON TO THE RIGHT -->


</RelativeLayout>